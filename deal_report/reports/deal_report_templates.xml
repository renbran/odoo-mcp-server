<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="report_deal_report_document">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>Deal Report</h2>
                    <p><strong>Reference:</strong> <span t-field="doc.name"/></p>
                    <p><strong>Date:</strong> <span t-field="doc.date"/></p>
                    <p><strong>Customer:</strong> <span t-field="doc.partner_id"/></p>
                    <table class="table table-sm mt-3">
                        <thead>
                            <tr>
                                <th>Total</th>
                                <th>VAT</th>
                                <th>Net</th>
                                <th>Commission %</th>
                                <th>Commission Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td t-field="doc.total_amount"/>
                                <td t-field="doc.vat_amount"/>
                                <td t-field="doc.net_amount"/>
                                <td t-field="doc.commission_rate"/>
                                <td t-field="doc.commission_amount"/>
                            </tr>
                        </tbody>
                    </table>

                    <h3 class="mt-3">Commission Lines</h3>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Description</th>
                                <th>Rate</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.commission_line_ids" t-as="line">
                                <tr>
                                    <td t-field="line.name"/>
                                    <td t-field="line.rate"/>
                                    <td t-field="line.amount"/>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </template>

        <report
            id="action_report_deal_report"
            model="deal.report"
            string="Deal Report"
            report_type="qweb-pdf"
            name="deal_report.report_deal_report_document"
            file="deal_report.report_deal_report_document"
        />
    </data>
</odoo>
