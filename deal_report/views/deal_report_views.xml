<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Action -->
        <record id="action_deal_report" model="ir.actions.act_window">
            <field name="name">Deal Reports</field>
            <field name="res_model">deal.report</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Tree View -->
        <record id="view_deal_report_tree" model="ir.ui.view">
            <field name="name">deal.report.tree</field>
            <field name="model">deal.report</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="partner_id"/>
                    <field name="total_amount"/>
                    <field name="vat_amount"/>
                    <field name="net_amount"/>
                    <field name="commission_amount"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_deal_report_form" model="ir.ui.view">
            <field name="name">deal.report.form</field>
            <field name="model">deal.report</field>
            <field name="arch" type="xml">
                <form string="Deal Report">
                    <header>
                        <button name="action_confirm" type="object" string="Confirm" invisible="state != 'draft'" class="btn-primary"/>
                        <button name="action_generate_commissions" type="object" string="Generate Commissions" invisible="state not in ['confirmed', 'commissioned']"/>
                        <button name="action_process_bills" type="object" string="Process Bills" invisible="state != 'commissioned'" class="btn-primary"/>
                        <button name="action_reset_to_draft" type="object" string="Reset to Draft" invisible="state not in ['confirmed', 'commissioned', 'billed']" class="btn-secondary"/>
                        <button name="action_cancel" type="object" string="Cancel" invisible="state not in ['draft', 'confirmed', 'commissioned']" class="btn-secondary"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,commissioned,billed,cancel"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="action_view_invoices" icon="fa-file-text-o">
                                <field name="invoice_count" widget="statinfo" string="Invoices"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="date"/>
                                <field name="sale_order_id" options="{'no_create': True}"/>
                                <field name="partner_id" readonly="1"/>
                                <field name="company_id" readonly="1"/>
                                <field name="currency_id" readonly="1"/>
                            </group>
                            <group string="Financials">
                                <field name="total_amount" readonly="1"/>
                                <field name="vat_rate" readonly="1"/>
                                <field name="vat_amount" readonly="1"/>
                                <field name="net_amount" readonly="1"/>
                            </group>
                            <group string="Commission">
                                <field name="commission_rate" readonly="1"/>
                                <field name="commission_amount" readonly="1"/>
                            </group>
                            <group string="Billing">
                                <field name="auto_post_invoice"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Commission Lines">
                                <field name="commission_line_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="rate"/>
                                        <field name="amount"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Bill Lines">
                                <field name="bill_line_ids">
                                    <tree>
                                        <field name="move_id"/>
                                        <field name="amount"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
