<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="deal_bill_line_tree_view" model="ir.ui.view">
      <field name="name">deal.bill.line.tree</field>
      <field name="model">deal.bill.line</field>
      <field name="arch" type="xml">
        <tree>
          <field name="deal_id"/>
          <field name="bill_id"/>
          <field name="bill_line_id"/>
          <field name="commission_line_id"/>
          <field name="partner_id"/>
          <field name="product_id"/>
          <field name="quantity"/>
          <field name="price_unit"/>
          <field name="price_subtotal"/>
          <field name="price_total"/>
          <field name="tax_ids" widget="many2many_tags"/>
          <field name="state"/>
        </tree>
      </field>
    </record>

    <record id="deal_bill_line_form_view" model="ir.ui.view">
      <field name="name">deal.bill.line.form</field>
      <field name="model">deal.bill.line</field>
      <field name="arch" type="xml">
        <form string="Bill Line">
          <group>
            <field name="deal_id" readonly="1"/>
            <field name="bill_id"/>
            <field name="bill_line_id"/>
          </group>
          <group>
            <field name="commission_line_id"/>
            <field name="partner_id"/>
            <field name="product_id"/>
            <field name="quantity"/>
            <field name="price_unit"/>
            <field name="price_subtotal" readonly="1"/>
            <field name="price_total" readonly="1"/>
            <field name="tax_ids" widget="many2many_tags"/>
            <field name="state"/>
          </group>
        </form>
      </field>
    </record>
  </data>
</odoo>
