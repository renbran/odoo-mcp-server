<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="module_category_rental_portal" model="ir.module.category">
            <field name="name">Property Portal Syndication</field>
            <field name="sequence">20</field>
        </record>

        <record id="group_portal_user" model="res.groups">
            <field name="name">Portal Syndication User</field>
            <field name="category_id" ref="module_category_rental_portal"/>
        </record>

        <record id="group_portal_manager" model="res.groups">
            <field name="name">Portal Syndication Manager</field>
            <field name="category_id" ref="module_category_rental_portal"/>
            <field name="implied_ids" eval="[(4, ref('group_portal_user'))]"/>
        </record>

        <record id="group_portal_admin" model="res.groups">
            <field name="name">Portal Syndication Admin</field>
            <field name="category_id" ref="module_category_rental_portal"/>
            <field name="implied_ids" eval="[(4, ref('group_portal_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4, ref('group_portal_manager'))]"/>
        </record>
    </data>
</odoo>
