<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Enhanced Job Requisition Form View with Modern Chatter -->
    <record id="view_recruitment_job_requisition_form_enhanced" model="ir.ui.view">
        <field name="name">recruitment.job.requisition.form.enhanced</field>
        <field name="model">recruitment.job.requisition</field>
        <field name="inherit_id" ref="recruitment_uae.view_recruitment_job_requisition_form_inherit"/>
        <field name="arch" type="xml">
            
            <!-- Add smart buttons -->
            <xpath expr="//sheet" position="before">
                <header>
                    <button name="action_create_applications" type="object" string="Create Applications" 
                            class="oe_highlight" invisible="state != 'approved'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved"/>
                </header>
            </xpath>
            
            <xpath expr="//sheet" position="inside">
                <div class="oe_button_box" name="button_box">
                    <button name="action_view_applications" type="object" class="oe_stat_button" icon="fa-users">
                        <field name="application_count" widget="statinfo" string="Applications"/>
                    </button>
                    <button name="action_view_contracts" type="object" class="oe_stat_button" icon="fa-file-text-o">
                        <field name="contract_count" widget="statinfo" string="Contracts"/>
                    </button>
                    <button name="action_view_deployments" type="object" class="oe_stat_button" icon="fa-plane">
                        <field name="deployment_count" widget="statinfo" string="Deployments"/>
                    </button>
                </div>
            </xpath>
            
            <!-- Add modern chatter at the bottom -->
            <xpath expr="//sheet" position="after">
                <div class="oe_chatter">
                    <field name="message_follower_ids" options="{'post_refresh': 'recipients'}"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </xpath>
            
        </field>
    </record>

    <!-- Enhanced Tree View -->
    <record id="view_recruitment_job_requisition_tree_enhanced" model="ir.ui.view">
        <field name="name">recruitment.job.requisition.tree.enhanced</field>
        <field name="model">recruitment.job.requisition</field>
        <field name="inherit_id" ref="recruitment_uae.view_recruitment_job_requisition_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-success">state == 'approved'</attribute>
                <attribute name="decoration-info">state == 'submitted'</attribute>
                <attribute name="decoration-danger">state == 'rejected'</attribute>
                <attribute name="decoration-muted">state == 'cancelled'</attribute>
            </xpath>
            
            <xpath expr="//field[@name='state']" position="after">
                <field name="application_count" string="Apps"/>
                <field name="contract_count" string="Contracts"/>
            </xpath>
        </field>
    </record>

    <!-- Enhanced Kanban View -->
    <record id="view_recruitment_job_requisition_kanban" model="ir.ui.view">
        <field name="name">recruitment.job.requisition.kanban</field>
        <field name="model">recruitment.job.requisition</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="expected_employees"/>
                <field name="state"/>
                <field name="application_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <i class="fa fa-building-o"/> <field name="partner_id"/>
                                </div>
                                <div>
                                    <i class="fa fa-users"/> <field name="expected_employees"/> positions
                                </div>
                                <div>
                                    <field name="state" widget="label_selection" 
                                           options="{'classes': {'draft': 'default', 'submitted': 'info', 'approved': 'success', 'rejected': 'danger'}}"/>
                                </div>
                                <div>
                                    <span class="badge badge-pill"><field name="application_count"/> Applications</span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>
