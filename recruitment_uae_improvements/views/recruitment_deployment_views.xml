<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Enhanced Deployment Form View with Modern Chatter -->
    <record id="view_recruitment_deployment_form_enhanced" model="ir.ui.view">
        <field name="name">recruitment.deployment.form.enhanced</field>
        <field name="model">recruitment.deployment</field>
        <field name="inherit_id" ref="recruitment_uae.view_recruitment_deployment_form_inherit"/>
        <field name="arch" type="xml">
            
            <!-- Add smart buttons -->
            <xpath expr="//sheet" position="before">
                <header>
                    <button name="action_confirm_arrival" type="object" string="Confirm Arrival" 
                            class="oe_highlight" invisible="state != 'traveling'"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,processing,visa_applied,visa_approved,traveling,arrived"/>
                </header>
            </xpath>
            
            <xpath expr="//sheet" position="inside">
                <div class="oe_button_box" name="button_box">
                    <button name="action_view_retentions" type="object" class="oe_stat_button" icon="fa-check-circle-o">
                        <field name="retention_count" widget="statinfo" string="Retentions"/>
                    </button>
                </div>
            </xpath>
            
            <!-- Add modern chatter at the bottom -->
            <xpath expr="//sheet" position="after">
                <div class="oe_chatter">
                    <field name="message_follower_ids" options="{'post_refresh': 'recipients'}"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </xpath>
            
        </field>
    </record>

    <!-- Enhanced Tree View -->
    <record id="view_recruitment_deployment_tree_enhanced" model="ir.ui.view">
        <field name="name">recruitment.deployment.tree.enhanced</field>
        <field name="model">recruitment.deployment</field>
        <field name="inherit_id" ref="recruitment_uae.view_recruitment_deployment_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-success">state == 'arrived'</attribute>
                <attribute name="decoration-info">state == 'traveling'</attribute>
                <attribute name="decoration-warning">state == 'visa_applied'</attribute>
                <attribute name="decoration-muted">state == 'cancelled'</attribute>
            </xpath>
        </field>
    </record>

    <!-- Enhanced Kanban View -->
    <record id="view_recruitment_deployment_kanban" model="ir.ui.view">
        <field name="name">recruitment.deployment.kanban</field>
        <field name="model">recruitment.deployment</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column" sample="1">
                <field name="name"/>
                <field name="candidate_id"/>
                <field name="partner_id"/>
                <field name="expected_arrival_date"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="candidate_id"/>
                                </strong>
                                <div>
                                    <i class="fa fa-building-o"/> <field name="partner_id"/>
                                </div>
                                <div>
                                    <i class="fa fa-calendar"/> Expected: <field name="expected_arrival_date"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>
