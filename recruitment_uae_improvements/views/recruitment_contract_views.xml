<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Enhanced Contract Form View with Modern Chatter -->
    <record id="view_recruitment_contract_form_enhanced" model="ir.ui.view">
        <field name="name">recruitment.contract.form.enhanced</field>
        <field name="model">recruitment.contract</field>
        <field name="inherit_id" ref="recruitment_uae.view_recruitment_contract_form_inherit"/>
        <field name="arch" type="xml">
            
            <!-- Add smart buttons -->
            <xpath expr="//sheet" position="before">
                <header>
                    <button name="action_create_deployment" type="object" string="Create Deployment" 
                            class="oe_highlight" invisible="state != 'signed' or deployment_count > 0"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,sent,signed"/>
                </header>
            </xpath>
            
            <xpath expr="//sheet" position="inside">
                <div class="oe_button_box" name="button_box">
                    <button name="action_view_deployment" type="object" class="oe_stat_button" icon="fa-plane">
                        <field name="deployment_count" widget="statinfo" string="Deployment"/>
                    </button>
                </div>
            </xpath>
            
            <!-- Add modern chatter at the bottom -->
            <xpath expr="//sheet" position="after">
                <div class="oe_chatter">
                    <field name="message_follower_ids" options="{'post_refresh': 'recipients'}"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </xpath>
            
        </field>
    </record>

    <!-- Enhanced Tree View -->
    <record id="view_recruitment_contract_tree_enhanced" model="ir.ui.view">
        <field name="name">recruitment.contract.tree.enhanced</field>
        <field name="model">recruitment.contract</field>
        <field name="inherit_id" ref="recruitment_uae.view_recruitment_contract_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-success">state == 'signed'</attribute>
                <attribute name="decoration-info">state == 'sent'</attribute>
                <attribute name="decoration-muted">state == 'cancelled'</attribute>
            </xpath>
        </field>
    </record>

    <!-- Enhanced Kanban View -->
    <record id="view_recruitment_contract_kanban" model="ir.ui.view">
        <field name="name">recruitment.contract.kanban</field>
        <field name="model">recruitment.contract</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column" sample="1">
                <field name="name"/>
                <field name="candidate_id"/>
                <field name="partner_id"/>
                <field name="salary_proposed"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="candidate_id"/>
                                </strong>
                                <div>
                                    <i class="fa fa-building-o"/> <field name="partner_id"/>
                                </div>
                                <div>
                                    <i class="fa fa-money"/> <field name="salary_proposed" widget="monetary"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>
