<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Enhanced Application Form View -->
    <record id="view_recruitment_application_form" model="ir.ui.view">
        <field name="name">recruitment.application.form</field>
        <field name="model">recruitment.application</field>
        <field name="inherit_id" ref="recruitment_uae.view_recruitment_application_form_inherit"/>
        <field name="arch" type="xml">
            
            <!-- Add smart buttons -->
            <xpath expr="//sheet" position="before">
                <header>
                    <button name="action_create_contract" type="object" string="Create Contract" 
                            class="oe_highlight" invisible="state != 'accepted' or contract_count > 0"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,interview,accepted"/>
                </header>
            </xpath>
            
            <xpath expr="//sheet" position="inside">
                <div class="oe_button_box" name="button_box">
                    <button name="action_view_contract" type="object" class="oe_stat_button" icon="fa-file-text-o">
                        <field name="contract_count" widget="statinfo" string="Contract"/>
                    </button>
                </div>
            </xpath>
            
            <!-- Add modern chatter at the bottom -->
            <xpath expr="//sheet" position="after">
                <div class="oe_chatter">
                    <field name="message_follower_ids" options="{'post_refresh': 'recipients'}"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </xpath>
            
        </field>
    </record>

    <!-- Enhanced Tree View -->
    <record id="view_recruitment_application_tree" model="ir.ui.view">
        <field name="name">recruitment.application.tree</field>
        <field name="model">recruitment.application</field>
        <field name="inherit_id" ref="recruitment_uae.view_recruitment_application_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-success">state == 'accepted'</attribute>
                <attribute name="decoration-info">state == 'interview'</attribute>
                <attribute name="decoration-warning">state == 'submitted'</attribute>
                <attribute name="decoration-danger">state == 'rejected'</attribute>
            </xpath>
        </field>
    </record>

    <!-- Enhanced Kanban View -->
    <record id="view_recruitment_application_kanban" model="ir.ui.view">
        <field name="name">recruitment.application.kanban</field>
        <field name="model">recruitment.application</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column" sample="1">
                <field name="name"/>
                <field name="candidate_id"/>
                <field name="job_id"/>
                <field name="salary_expected"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="candidate_id"/>
                                </strong>
                                <div>
                                    <i class="fa fa-briefcase" title="Job Position"/> <field name="job_id"/>
                                </div>
                                <div>
                                    <i class="fa fa-money" title="Expected Salary"/> <field name="salary_expected" widget="monetary"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>
