<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="sale_order_form_view_deal_tracking" model="ir.ui.view">
            <field name="name">sale.order.form.deal.tracking</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <!-- Add a new page in the notebook -->
                <xpath expr="//notebook" position="inside">
                    <page string="Deal Tracking" name="deal_tracking">
                        <group string="Brokerage Deal Information">
                            <group>
                                <field name="buyer_name" readonly="1" string="Buyer Name"/>
                                <field name="unit_sale_value" readonly="1" string="Unit Sale Value"/>
                            </group>
                            <group>
                                <field name="project_name" readonly="1" string="Project Name"/>
                                <field name="primary_commission_percentage" readonly="1" string="Primary Commission %" widget="percentage"/>
                            </group>
                        </group>
                        <group string="Deal Summary">
                            <field name="deal_summary_html" widget="html" nolabel="1" readonly="1" colspan="2"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="sale_order_tree_view_deal_tracking" model="ir.ui.view">
            <field name="name">sale.order.tree.deal.tracking</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.sale_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="buyer_name" string="Buyer" optional="show"/>
                    <field name="project_name" string="Project" optional="hide"/>
                    <field name="unit_sale_value" string="Unit Price" optional="show"/>
                    <field name="primary_commission_percentage" string="Commission %" widget="percentage" optional="show"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
