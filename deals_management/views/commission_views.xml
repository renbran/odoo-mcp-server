<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ===== COMMISSION VIEWS ===== -->

    <!-- Commission Line Form - Enhanced for Deals -->
    <record id="view_commission_line_deals_form" model="ir.ui.view">
        <field name="name">commission.line.deals.form</field>
        <field name="model">commission.line</field>
        <field name="inherit_id" ref="commission_ax.view_commission_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_bill" type="object" class="oe_stat_button" icon="fa-file-text-o" invisible="bill_id == False">
                    <field name="bill_id" widget="statinfo" string="Bill"/>
                </button>
            </xpath>
        </field>
    </record>

    <!-- Commission Line Tree - Enhanced with Bill Info -->
    <record id="view_commission_line_deals_tree" model="ir.ui.view">
        <field name="name">commission.line.deals.tree</field>
        <field name="model">commission.line</field>
        <field name="inherit_id" ref="commission_ax.view_commission_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-success">bill_id != False</attribute>
                <attribute name="decoration-warning">bill_id == False</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="bill_id" optional="show" string="Vendor Bill"/>
            </xpath>
        </field>
    </record>

    <!-- ===== COMMISSION LINE VIEWS - BILL INTEGRATION ===== -->

    <!-- Commission Line Form View - Add Bill Creation Button -->
    <record id="view_commission_line_form_bill" model="ir.ui.view">
        <field name="name">commission.line.form.bill</field>
        <field name="model">commission.line</field>
        <field name="inherit_id" ref="commission_ax.view_commission_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_create_bill" string="Create Bill" type="object" class="btn-primary" invisible="bill_id != False"/>
                <button name="action_view_bill" string="View Bill" type="object" class="btn-secondary" invisible="bill_id == False"/>
            </xpath>

            <xpath expr="//sheet" position="inside">
                <group name="bill_info" string="Bill Information" invisible="bill_id == False">
                    <field name="bill_id" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
