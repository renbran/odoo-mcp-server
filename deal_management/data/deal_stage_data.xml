<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="1">
    <record id="stage_draft" model="deal.stage">
      <field name="name">Draft</field>
      <field name="sequence">10</field>
      <field name="color">0</field>
      <field name="description">Initial draft stage</field>
    </record>
    <record id="stage_qualification" model="deal.stage">
      <field name="name">Qualification</field>
      <field name="sequence">20</field>
      <field name="color">2</field>
      <field name="description">Lead is qualified</field>
    </record>
    <record id="stage_proposal" model="deal.stage">
      <field name="name">Proposal</field>
      <field name="sequence">30</field>
      <field name="color">3</field>
      <field name="description">Proposal sent to customer</field>
    </record>
    <record id="stage_negotiation" model="deal.stage">
      <field name="name">Negotiation</field>
      <field name="sequence">40</field>
      <field name="color">4</field>
      <field name="description">Active negotiation in progress</field>
    </record>
    <record id="stage_won" model="deal.stage">
      <field name="name">Won</field>
      <field name="sequence">90</field>
      <field name="is_won" eval="True"/>
      <field name="color">10</field>
      <field name="description">Deal closed - won</field>
    </record>
    <record id="stage_lost" model="deal.stage">
      <field name="name">Lost</field>
      <field name="sequence">100</field>
      <field name="is_lost" eval="True"/>
      <field name="color">1</field>
      <field name="description">Deal closed - lost</field>
    </record>
  </data>
</odoo>
