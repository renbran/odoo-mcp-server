<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Extend Invoice Form View with Deal Information -->
        <record id="account_move_form_view_deal_tracking" model="ir.ui.view">
            <field name="name">account.move.form.deal.tracking</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <!-- Add Deal Information Section in invoice form -->
                <xpath expr="//field[@name='partner_id']" position="after">
                    <group string="Brokerage Deal Information" groups="account.group_account_manager" style="background: #f8f9fa; border-radius: 5px;">

                        <field name="sale_order_deal_reference" readonly="1" string="Sale Order Ref"/>

                        <field name="buyer_name" readonly="1" string="Buyer Name" widget="char"/>

                        <field name="project_name" readonly="1" string="Project" widget="char"/>

                        <field name="unit_sale_value" readonly="1" string="Unit Sale Value" widget="monetary"/>

                        <field name="commission_percentage" readonly="1" string="Commission %"/>
                    </group>

                    <!-- Deal Information Summary -->
                    <field name="deal_information_summary" nolabel="1" readonly="1" widget="html" style="margin-top: 10px;"/>
                </xpath>

                <!-- Add action buttons in header -->
                <xpath expr="//header" position="inside">
                    <button name="action_view_sale_order_deal" type="object" string="View Sale Order" class="oe_highlight" groups="sales_team.group_sale_salesman" icon="fa-link"/>

                    <button name="action_open_related_commission_lines" type="object" string="View Commissions" groups="account.group_account_manager" icon="fa-calculator"/>
                </xpath>

            </field>
        </record>

        <!-- Extend Invoice Tree View with Deal Columns -->
        <record id="account_move_tree_view_deal_tracking" model="ir.ui.view">
            <field name="name">account.move.tree.deal.tracking</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_tree"/>
            <field name="arch" type="xml">

                <!-- Add deal columns to tree view -->
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="buyer_name" string="Buyer" width="15%"/>
                    <field name="project_name" string="Project" width="12%"/>
                    <field name="unit_sale_value" string="Unit Price" width="10%"/>
                    <field name="commission_percentage" string="Commission %" width="10%"/>
                </xpath>

            </field>
        </record>

        <!-- Create a dedicated view for Deal Information Summary -->
        <record id="account_move_deal_information_kanban" model="ir.ui.view">
            <field name="name">account.move.deal.information.kanban</field>
            <field name="model">account.move</field>
            <field name="type">kanban</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="buyer_name"/>
                    <field name="project_name"/>
                    <field name="unit_sale_value"/>
                    <field name="commission_percentage"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click" style="border-left: 4px solid #8b1538;">
                                <div class="oe_kanban_content">
                                    <div style="font-weight: bold; color: #8b1538;">
                                        <field name="name"/>
                                    </div>
                                    <div style="font-size: 12px; margin-top: 8px;">
                                        <b>Buyer:</b>
                                        <field name="buyer_name"/>
                                        <br/>
                                        <b>Project:</b>
                                        <field name="project_name"/>
                                        <br/>
                                        <b>Unit Price:</b>
                                        <field name="unit_sale_value" widget="monetary"/>
                                        <br/>
                                        <b style="color: #8b1538;">Commission %:</b>
                                        <field name="commission_percentage"/>
%
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

    </data>
</odoo>
