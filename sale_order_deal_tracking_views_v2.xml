<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="sale_order_form_view_deal_tracking" model="ir.ui.view">
            <field name="name">sale.order.form.deal.tracking</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <!-- Add after partner_shipping_id for better positioning -->
                <xpath expr="//field[@name='partner_shipping_id']" position="after">
                    <separator string="BROKERAGE DEAL INFORMATION" style="font-weight: bold; color: #8b1538;"/>
                    <group col="4">
                        <field name="buyer_name" readonly="1"/>
                        <field name="project_name" readonly="1"/>
                        <field name="unit_sale_value" readonly="1"/>
                        <field name="primary_commission_percentage" readonly="1" widget="percentage"/>
                    </group>
                    <group>
                        <field name="deal_summary_html" widget="html" nolabel="1" readonly="1" colspan="2"/>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="sale_order_tree_view_deal_tracking" model="ir.ui.view">
            <field name="name">sale.order.tree.deal.tracking</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.sale_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="buyer_name" string="Buyer" optional="show"/>
                    <field name="project_name" string="Project" optional="hide"/>
                    <field name="unit_sale_value" string="Unit Price" optional="show"/>
                    <field name="primary_commission_percentage" string="Commission %" widget="percentage" optional="show"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
