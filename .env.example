# ============================================
# Odoo MCP Server Environment Configuration
# ============================================
# Copy this file to .env and fill in your Odoo credentials

# ============================================
# Option 1: Single Odoo Instance (Development)
# ============================================

# Odoo Server URL
ODOO_URL=http://localhost:8069

# Odoo Database Name
ODOO_DB=odoo_dev

# Odoo Admin Username
ODOO_USERNAME=admin

# Odoo Admin Password
ODOO_PASSWORD=admin

# Optional: API Key (if using token-based auth)
# ODOO_API_KEY=your_api_key_here

# ============================================
# Option 2: Multiple Odoo Instances (JSON)
# ============================================
# Uncomment and configure for multiple instances:
# ODOO_INSTANCES={"production":{"url":"https://prod.odoo.com","db":"prod_db","username":"admin","password":"pass123"},"staging":{"url":"https://staging.odoo.com","db":"stage_db","username":"admin","password":"pass456"},"local":{"url":"http://localhost:8069","db":"local_db","username":"admin","password":"admin"}}

# ============================================
# OPTIONAL SETTINGS
# ============================================

# Connection Timeout in milliseconds (default: 30000)
ODOO_TIMEOUT=30000

# Maximum Retry Attempts (default: 3)
ODOO_MAX_RETRIES=3

# Log Level (debug, info, warn, error)
LOG_LEVEL=info

# MCP server port (if using HTTP transport)
MCP_PORT=3000

# Enable verbose logging for debugging
DEBUG=false

# ============================================
# Notes:
# ============================================
# - For development: Use http://localhost:8069
# - For Odoo.com: Use https://yourcompany.odoo.com
# - For on-premise: Use your server URL with port
# - Database name can be found in Odoo Settings > About
