{
  "name": "odoo-mcp-server",
  "version": "1.0.0",
  "description": "Production-grade MCP server for Odoo 17-19 - enables AI assistants to interact with Odoo instances",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "odoo-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "dev:watch": "tsx watch src/index.ts",
    "watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "clean": "node -e \"const fs = require('fs'); fs.rmSync('dist', { recursive: true, force: true })\"",
    "prebuild": "npm run clean",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "odoo",
    "model-context-protocol",
    "ai",
    "assistant",
    "erp",
    "xmlrpc"
  ],
  "author": "renbran",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/renbran/odoo-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/renbran/odoo-mcp-server/issues"
  },
  "homepage": "https://github.com/renbran/odoo-mcp-server#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "xmlrpc": "^1.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.11.0",
    "@types/xmlrpc": "^1.3.8",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
