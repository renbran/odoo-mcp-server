{
  "name": "odoo-mcp-server",
  "version": "1.0.0",
  "description": "Production-grade MCP server for Odoo 17-19 with comprehensive operations support",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "odoo-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "tsx src/test-connection.ts",
    "cleanup:dry-run": "tsx scripts/database-cleanup.mjs dry-run",
    "cleanup": "tsx scripts/database-cleanup.mjs full",
    "cleanup:test": "tsx scripts/database-cleanup.mjs test",
    "cleanup:drafts": "tsx scripts/database-cleanup.mjs drafts",
    "cleanup:logs": "tsx scripts/database-cleanup.mjs logs"
  },
  "keywords": [
    "mcp",
    "odoo",
    "erp",
    "model-context-protocol"
  ],
  "author": "Eiger Marvel HR",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "dotenv": "^17.2.3",
    "xmlrpc": "^1.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/xmlrpc": "^1.3.8",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
